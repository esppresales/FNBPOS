<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <Button
            android:id="@+id/button_test_print"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="TEST PRINT"
            android:background="@drawable/button_background_epson"
            android:textColor="@drawable/button_text_color_white"/>

        <TextView
            android:id="@+id/text_view_name"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Printer Name:"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>

        <EditText
            android:id="@+id/edit_text_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/text_view_name"
            android:layout_toLeftOf="@id/button_test_print"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:text="MASTER PRINTER"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <Button
            android:id="@+id/button_delete"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="DELETE"
            android:background="@drawable/button_background_epson"
            android:textColor="@drawable/button_text_color_white"/>

        <TextView
            android:id="@+id/text_view_device_id"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Device ID:"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/txt_device_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/text_view_device_id"
            android:layout_toLeftOf="@id/button_delete"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:text="local_printer"/>

    </RelativeLayout>
</LinearLayout>